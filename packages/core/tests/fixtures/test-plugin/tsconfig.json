{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "every-plugin": ["../../../src/index.ts"],
      "every-plugin/*": ["../../../src/*"],
      "every-plugin/zod": ["../../../src/zod.ts"],
      "every-plugin/orpc": ["../../../src/orpc.ts"],
      "every-plugin/effect": ["../../../src/effect.ts"],
      "every-plugin/normalize": ["../../../src/runtime/services/normalize.ts"]
    },
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}