{
  "name": "monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "ui",
      "host",
      "gateway"
    ],
    "catalog": {
      "react": "19.2.4",
      "react-dom": "19.2.4",
      "@tanstack/react-query": "5.90.20",
      "@tanstack/react-router": "1.157.16",
      "@hot-labs/near-connect": "0.8.2",
      "near-kit": "0.10.0",
      "better-auth": "1.4.17",
      "better-near-auth": "0.3.4",
      "every-plugin": "0.9.0",
      "drizzle-orm": "0.45.1",
      "drizzle-kit": "0.31.8",
      "@libsql/client": "0.17.0",
      "typescript": "5.9.3",
      "vitest": "4.0.17",
      "@types/node": "25.0.3",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "everything-dev": "0.1.5",
      "@module-federation/enhanced": "0.22.1",
      "@module-federation/node": "2.7.27",
      "@module-federation/rsbuild-plugin": "0.22.1",
      "@module-federation/runtime-core": "0.22.1"
    }
  },
  "scripts": {
    "bos": "bos",
    "dev": "bos dev",
    "dev:ui": "bos dev --ui",
    "dev:api": "bos dev --api",
    "dev:host": "bos dev --host",
    "dev:proxy": "bos dev --proxy",
    "build": "bos build",
    "build:api": "bun run --cwd api rsbuild build",
    "build:host": "bun run --cwd host rsbuild build",
    "build:ui": "bun run --cwd ui rsbuild build",
    "deploy": "bos deploy",
    "test": "bos test",
    "typecheck": "bun run --cwd host tsc --noEmit && bun run --cwd ui tsc --noEmit && bun run --cwd api tsc --noEmit",
    "start": "bos start --no-interactive",
    "serve": "bos serve",
    "kill": "bos kill",
    "ps": "bos ps",
    "docker:build": "bos docker build",
    "docker:build:dev": "bos docker build --target development",
    "docker:run": "bos docker run",
    "docker:run:dev": "bos docker run --target development --mode serve",
    "docker:stop": "bos docker stop --all",
    "db:push": "bun run --cwd host drizzle-kit push",
    "db:studio": "bun run --cwd host drizzle-kit studio",
    "db:generate": "bun run --cwd host drizzle-kit generate",
    "db:migrate": "bun run --cwd host drizzle-kit migrate",
    "db:sync": "bun run scripts/sync-db.ts",
    "seed-docs": "bun run scripts/seed-docs.ts"
  },
  "packageManager": "bun@1.2.20",
  "dependencies": {
    "@types/bun": "^1.3.6",
    "everything-dev": "catalog:"
  }
}